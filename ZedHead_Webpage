<script>
function openLink(evt, TabBoxesName) {
  var i, x, tablinks;
  x = document.getElementsByClassName("TabBoxes");
  for (i = 0; i < x.length; i++) {
     x[i].style.display = "none";
  }

  document.getElementById(TabBoxesName).style.display = "block";
}

